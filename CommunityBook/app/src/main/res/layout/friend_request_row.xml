<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/timeline_profile"
            android:layout_width="90dp"
            android:layout_height="105dp"
            android:src="@drawable/blank_profile" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/timeline_profile"
            android:layout_toRightOf="@+id/timeline_profile"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:text="dsds"
            android:textStyle="bold"
            android:textColor="@color/title"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/txt_mutual_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/timeline_profile"
            android:paddingLeft="5dp"
            android:layout_below="@+id/txt_name"
            android:paddingTop="5dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="dsds"
            android:textColor="@color/title"
            android:textSize="16dp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:weightSum="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/timeline_profile"
            android:layout_below="@+id/txt_mutual_friends">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Confirm"
                android:background="@drawable/blue_rounded_corner_bg"
                android:textColor="#FFFFFF"/>

            <Button
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Delete"
                android:background="@drawable/white_rounded_corner_bg"
                android:textColor="@android:color/darker_gray"/>


        </LinearLayout>

        <!--<ImageView
            android:id="@+id/fb_like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/txt_comments"
            android:layout_toRightOf="@+id/timeline_profile"
            android:paddingLeft="5dp"
            android:src="@drawable/fb_like_icon" />

        <TextView
            android:id="@+id/txt_notification_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_comments"
            android:layout_toRightOf="@+id/fb_like"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:textColor="@color/blue"
            android:text="dsds" />-->


    </RelativeLayout>

</LinearLayout>