<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/timeline_profile"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:src="@drawable/blank_profile" />

        <TextView
            android:id="@+id/txt_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_toEndOf="@+id/timeline_profile"
            android:layout_toRightOf="@+id/timeline_profile"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:text="dsds"
            android:textColor="@color/title"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/txt_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_notification"
            android:layout_toRightOf="@+id/timeline_profile"
            android:paddingLeft="5dp"
            android:visibility="gone"
            android:text="dsds" />

        <ImageView
            android:id="@+id/fb_like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/txt_comments"
            android:layout_toRightOf="@+id/timeline_profile"
            android:paddingLeft="5dp"
            android:src="@drawable/fb_like_icon" />

        <TextView
            android:id="@+id/txt_notification_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_comments"
            android:layout_toRightOf="@+id/fb_like"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:textColor="@color/blue"
            android:text="dsds" />


    </RelativeLayout>

</LinearLayout>